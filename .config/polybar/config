include-directory = modules
include-directory = vars

[bar-config]
# Dimensions
width = 100%
height = 25
wm-restack = bspwm

# Spacing
padding = 1
module-margin = 1

# Background
background = ${colors.background}
foreground = ${colors.foreground}

# Fonts
font-0 = ${fonts.default}
font-1 = ${fonts.icons}

#[module/bspwm]
#type = internal/bspwm
#pin-worpspaces = true

[bar/primary]
monitor = DP-2
inherit = bar-config
enable-ipc = true
modules-left = workspaces window
modules-center = now-playing
modules-right = volume sep updates sep memory sep cpu sep net-eth clock sep poweroff reboot sleep 

[bar/secondary]
monitor = HDMI-1
inherit = bar-config
modules-left = workspaces window
modules-right = music

